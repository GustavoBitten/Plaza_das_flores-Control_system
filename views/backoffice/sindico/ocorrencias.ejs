                    <th scope="col">Tipo</th>
                    <th scope="col">Status</th>
                    <th scope="col">Data</th>
                    <th scope="col">Responder</th>
                  </tr>
                </thead>
                <tbody>
                  <tr >
                    <td>Lâmpada Queimada</td>
                    <td>Manutenção</td>
                    <td></td>
                    <td>20/12/2020</td>
                    <td><button type="button" class="detalhes btn btn-primary " data-toggle="modal" data-target="#detalhes1Modal">
                      +
                     </button>
                       
                  </tr>

                  <tr>
                    <td>Som Alto</td>
                    <td>Reclamação</td>
                    <td>Em Análise</td>
                    <td>22/12/2020</td>
                    <td><button type="button" class="detalhes btn btn-primary " data-toggle="modal" data-target="#detalhes1Modal">
                      +
                     </button> 
                  </tr>

                  <tr>
                    <td>Som Alto</td>
                    <td>Reclamação</td>
                    <td>Em Andamento</td>
                    <td>22/12/2020</td>
                    <td> <button type="button" class="detalhes btn btn-primary " data-toggle="modal" data-target="#detalhes1Modal">
                      +
                     </button>  
                  </tr>

                  <tr>
                    <td>Som Alto</td>
                    <td>Reclamação</td>
                    <td>Concluída</td>
                    <td>22/12/2020</td>
                    <td> <button type="button" class="detalhes btn btn-primary " data-toggle="modal" data-target="#detalhes1Modal">
                      +
                     </button>  
                  </tr>
                
                </tbody>
              </table>
            </div>
         
                        
  </div>
        
    </main>
    <%- include('../../includes/scriptJS') %>
</body>

</html>

<!--Filtro Modal -->
<div class="modal fade" id="filtroModal" tabindex="-1" role="dialog" aria-labelledby="filtroModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="filtroModal">Filtro</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="birthday">Data Início</label>
            <input type="date" id="birthday" name="birthday">
          </div>
          <div class="form-group">
            <label for="birthday">Data Final </label>
            <input type="date" id="birthday" name="birthday">
          </div>
          <div class="form-group">
            <label for="">Status</label>
            <select name="Tipo" id="status">
              <option value="Em Andamento">Em Andamento</option>
              <option value="Em Análise">Em Análise</option>
              <option value="Concluído">Concluído</option>

            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-primary">Filtrar</button>
      </div>
    </div>
  </div>
</div>

