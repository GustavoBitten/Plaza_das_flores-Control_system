<!DOCTYPE html>
<html lang="pt-br">

  <head>
    <%- include('../includes/head', {titulo}) %>

    <link rel="stylesheet" href="/css/backoffice/layout.css">
  </head>

  <body>
    <%- include('../includes/backoffice/header') %>
    <%- include('../includes/backoffice/aside') %>

    <main class="container-fluid mx-0 pt-2">

      <h1 class="titulo">Correspondências</h1>

      <div class="row">
          <div class="col-10 col-md-8 offset-1 offset-md-2 mb-3 p-0">
              <button id="btnNovaCorrespondencia" type="button" class="btn-sm btn-orange border-0 rounded-pill font-weight-bold"
                data-toggle="modal" data-target="#modalNovaCorrespondencia">
                Nova Correspondência
              </button>
          </div>
      </div>

      <section class="row">
        <div class="card col-10 col-md-8 offset-1 offset-md-2 px-0">
          <div class="card-header d-flex justify-content-center w-100 p-0">
            <h5 class="m-0 p-1">Correspondências</h5>
          </div>

          <div class="card-body row">
            <div class="col-12 table-responsive">
              <% if (typeof listaCorrespondencias == 'undefined') { %>
                <% if (typeof error != 'undefined') { %>
                  <%= error %>
                <% } %>
              <% } else { %>
                <% if (listaCorrespondencias.length > 0) { %>
                  <table class="table table-borderless table-striped table-hover">
                    <caption>
                      Correspondências
                    </caption>

                    <thead>
                      <tr>
                        <th class="text-center text-nowrap" scope="col">
                          Data
                        </th>
                        <% if (usuario.tipo_usuario_id != 1) { %>
                          <th class="text-center" scope="col">
                            Morador
                          </th>
                          <th class="text-center" scope="col">
                            Endereço
                          </th>
                        <% } %>
                        <th class="text-center" scope="col">
                          Tipo
                        </th>
                        <% if (usuario.tipo_usuario_id == 1) { %>
                          <th class="text-center" scope="col">
                            Rastreio
                          </th>
                        <% } %>
                        <th class="text-center" scope="col">
                          Situação
                        </th>
                        <th class="text-center text-nowrap" scope="col">
                          Retirado Por
                        </th>
                        <th class="text-center text-nowrap" scope="col">
                          Data de Retirada
                        </th>
                        <th class="text-center text-nowrap" scope="col">
                          Ações
                        </th>
                      </tr>
                    </thead>

                    <tbody id="tableBody">
                      <% listaCorrespondencias.forEach(correspondencia => { %>
                        <tr>
                          <td class="text-center align-middle">
                            <%= moment(correspondencia.created_at).format('DD/MM/YYYY') %>
                          </td>
                          <% if (usuario.tipo_usuario_id != 1) { %>
                            <td class="text-center align-middle text-nowrap">
                              <%= correspondencia.morador.nome %>
                            </td>
                            <td class="text-center align-middle text-nowrap">
                              <%= correspondencia.morador.ap.apartamento + '/' + correspondencia.morador.bl.bloco %>
                            </td>
                          <% } %>
                          <td class="text-center align-middle text-nowrap">
                            <%= correspondencia.tipo_correspondencia.tipo %>
                          </td>
                          <% if (usuario.tipo_usuario_id == 1) { %>
                            <td class="text-center align-middle text-nowrap">
                              <%= correspondencia.rastreio ? correspondencia.rastreio : '-' %>
                            </td>
                          <% } %>
                          <td class="text-center align-middle">
                            <%= correspondencia.status.situacao %>
                          </td>
                          <td class="text-center align-middle text-nowrap">
                            <% if (correspondencia.retirado_por) { %>
                              <%= correspondencia.retirado.nome %>
                            <% } else { %>
                              <button id="btnRetirada" type="button" class="btn-sm btn-orange border-0 rounded-pill font-weight-bold"
                                data-toggle="modal" data-target="#modal">
                                Resgistrar
                              </button>
                            <% } %>
                          </td>
                          <td class="text-center align-middle">
                            <%= moment(correspondencia.updated_at).format('DD/MM/YYYY') %>
                          </td>
                          <td class="text-center align-middle">
                            <a id="editar" class="text-primary text-decoration-none" data-target="#modal"
                              data-id="" title="Editar">
                              <i class="fas fa-edit"></i>
                            </a>
                            <a id="excluir" class="text-danger ml-3 mt-3" data-id="" title="Excluir">
                              <i class="fas fa-trash-alt"></i>
                            </a>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                <% } else { %>
                  <h4 class="text-danger">Nenhuma correspondência foi cadastrada!</h4>
                <% } %>
              <% } %>
            </div>
            <!-- /.col-12 -->
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </section>

    </main>

    <span id="tipoUsuario" hidden><%= usuario.tipo_usuario_id %></span>

    <%# Modal Nova Correspondencia %>
    <div class="modal fade" id="modalNovaCorrespondencia" tabindex="-1" role="dialog"
      aria-labelledby="modalNovaCorrespondenciaTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-md" role="document">
        <div class="modal-content">
          <div class="modal-header d-flex justify-content-center p-1">
            <h5 class="modal-title" id="modalNovaCorrespondenciaTitle">Nova Correspondência</h5>
          </div>

          <form class="form-group m-0" action="/backoffice/sindico/comunicados" method="POST">
            <div class="modal-body">
              <div class="row">

                <div class="col">
                  <label for="selectBloco">Bloco</label>
                  <select id="selectBloco" name="selectBloco" class="custom-select">
                    <%# Valores preenchidos via ajax %>
                  </select>
                </div>

                <div class="col">
                  <label for="selectApartamento">Apartamento</label>
                  <select id="selectApartamento" name="selectApartamento" class="custom-select">
                    <%# Valores preenchidos via ajax %>
                  </select>
                </div>

              </div>
              <!-- /div.row -->

              <label class="pt-2" for="nomeMorador">Nome do Morador</label>
              <input id="nomeMorador" class="form-control" type="text" placeholder="Selecione o bloco e o apartamento" disabled>
              <input id="idMorador" name="idMorador" type="text" disabled hidden>

              <label class="pt-2" for="selectTipo">Tipo da Encomenda</label>
              <select id="selectTipo" name="selectTipo" class="custom-select">
                <%# Valores preenchidos via ajax %>
              </select>

              <label class="pt-2" for="rastreio">Código de Rastreio</label>
              <input id="rastreio" name="rastreio" class="form-control" type="text" placeholder="BR0000000000CN">

            </div>
          </form>

          <div class="modal-footer border-0">
            <button id="btnCadastrarCorrespondencia" class="btn-sm btn-success border-0 rounded-pill font-weight-bold px-3 ml-2">
              Cadastrar
            </button>
            <button type="button" class="btn-sm btn-danger border-0 rounded-pill font-weight-bold px-3"
              data-dismiss="modal">
              Voltar
            </button>
          </div>

        </div>
      </div>
    </div>
    <!-- /#modalNovaCorrespondencia -->

    <%- include('../includes/scriptJS') %>
    <script type="text/javascript" src="/javascripts/backoffice/correspondencias.js"></script>
  </body>
</html>
