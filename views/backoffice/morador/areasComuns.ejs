    <%- include('../../includes/backoffice/header') %>
    <%- include('../../includes/backoffice/aside') %>

    <main class="container-fluid mx-0 pt-2">

      <div class="row">
        <h1 class="pl-3">Áreas Comuns</h1>
      </div>

      <div class="row">
        <div class="col-10 col-md-8 offset-1 offset-md-2 mb-3 p-0">
          <!-- <button id="btnNovaReserva" type="button" class="btn-sm border-0 rounded-pill">Nova Reserva</button> -->
          <button id="btnMinhasReservas" type="button" class="btn-sm border-0 rounded-pill"
           data-toggle="modal" data-target="#modalMinhasReservas">Minhas Reservas</button>
          <!-- Caso for usar o outro btn adicionar a classe 'ml-5'-->
        </div>
      </div>

      <section class="row">

        <div class="card col-10 col-md-8 offset-1 offset-md-2 px-0">
          <div class="card-header d-flex justify-content-center w-100 p-0">
            <h5 class="m-0 p-1">Nova Reserva</h5>
          </div>
          <div class="card-body row">
            <div id="divFormReservas" class="col-12 col-sm-6">
              <form id="formReserva" class="overflow-hidden border-right h-100" action="">
                
                <h6>Espaço:</h6>

                <div id="checkboxes" class="d-flex">
                  <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="churrasqueira" name="churrasqueira" value="Churrasqueira">
                    <label class="custom-control-label" for="churrasqueira"> Churrasqueira</label>
                  </div>

                  <div class="custom-control custom-checkbox ml-5">
                    <input type="checkbox" class="custom-control-input" id="salao" name="salao" value="Salão">
                    <label class="custom-control-label" for="salao"> Salão de Festas</label>
                  </div>
                </div>
                <!-- /.d-flex -->

                <div class="custom-control d-flex flex-column pt-3 pl-0">
                  <label for="diaReserva">Dia:</label>
                  <input type="date" class="border rounded-pill" id="diaReserva" name="diaReserva"
                   value="<%= new Date().getFullYear() %>-<%= new Date().getMonth() + 1 < 10 ? '0' + (new Date().getMonth() + 1) : new Date().getMonth() + 1 %>-<%= new Date().getDate() < 10 ? '0' + new Date().getDate() : new Date().getDate() %>"
                   min="<%= new Date().getFullYear() %>-<%= new Date().getMonth() + 1 < 10 ? '0' + (new Date().getMonth() + 1) : new Date().getMonth() + 1 %>-<%= new Date().getDate() < 10 ? '0' + new Date().getDate() : new Date().getDate() %>">
                </div>

                <div id="divBtn" class="custom-control position-absolute bottom-0 w-80 pl-0">
                  <span class="d-flex justify-content-center">
                    <button type="submit" class="btn-sm border-0 rounded-pill px-3" id="btnReservar">Reservar</button>
                  </span>
                </div>
                
              </form>
            </div>
            <!-- /#divFormReservas -->

            <div id="infos" class="col-12 col-sm-6">
              <h6>Regras:</h6>
              <p class="text-sm">Min 5 dias de antecedência;
                Taxa de 5% do condomínio;
                Até 60 convidados.
              </p>

              <h6>Churrasqueira:</h6>
              <p>Churrasqueira, pia, geladeira, freezer, 5 mesas com 4 cadeiras cada.</p>

              <h6>Salão de Festas:</h6>
              <p>2 Geladeiras, freezer, 6 mesas com 6 cadeiras cada, pista de dança com jogos de luzes, tv.</p>
            </div>
            <!-- /#infos -->
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

      </section>

    </main>

