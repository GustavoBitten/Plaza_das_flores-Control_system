          <h5>Resposta do(a) Síndico(a)</h5>
          <p><%= ocorrencia.resposta %></p>
          
        </div>
        <%})%>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
