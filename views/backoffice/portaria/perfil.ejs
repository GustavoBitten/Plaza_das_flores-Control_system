  <!-- Modais -->
<div class="modal fade " id="btnEditarPerfil" tabindex="-1" role="dialog"
                aria-labelledby="btnEditarPerfil" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="btnEditarPerfil">Editar Perfil</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form>
                        <div class="form-group">
                          <label for="editarEmailPerfil" class="col-form-label">Novo Email</label>
                          <input type="email" class="form-control" name="editarEmailPerfil" id="editarEmailPerfil"
                            placeholder="Novo Email">
                        </div>
                        <div class="form-group">
                          <label for="editarTelPerfil" class="col-form-label">Novo Tel</label>
                          <input type="tel" class="form-control" name="editarTelPerfil" id="editarTelPerfil"
                            placeholder="Novo Telefone">
                        </div>
                        <div class="form-group">
                          <label for="editarFotoPerfil">Foto</label>
                          <input type="file" class="form" name="editarFotoPerfil" id="editarFotoPerfil">
                        </div>
                      </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                      <button type="submit" class="btn btn-primary">Salvar</button>

                    </div>
                  </div>
                </div>
              </div>
               <!-- Modal Editar Perfil Cartao fim -->

              <div class="modal fade" id="btnAlterarSenha" tabindex="-1" role="dialog" aria-labelledby="btnAlterarSenha"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="btnAlterarSenha">Alterar Senha</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form>
                      <div class="form-group">
                        <label for="novaSenha" class="col-form-label">Nova Senha</label>
                        <input type="password" class="form-control" name="novaSenha" id="novaSenha"
                          placeholder="Nova Senha">
                      </div>
                      <div class="form-group">
                        <label for="senhaAtual" class="col-form-label">Senha Atual</label>
                        <input type="password" class="form-control" name="senhaAtuale" id="senhaAtual"
                          placeholder="Senha Atual">
                      </div>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>

                  </div>
                </div>
              </div>
            </div>

